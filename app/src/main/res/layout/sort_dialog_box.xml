<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:background="@color/yellow"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:padding="3dp"
        android:text="Sort By:"
        android:textColor="@color/black"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"/>
    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/title_check"
        android:buttonTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/title_check"
        app:layout_constraintBottom_toBottomOf="@id/title_check"
        android:textSize="20dp"
        android:padding="3dp"
        android:text="Title"/>
    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/body_check"
        android:buttonTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/title_check"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/body_check"
        app:layout_constraintBottom_toBottomOf="@id/body_check"
        android:textSize="20dp"
        android:padding="3dp"
        android:text="Body"/>
    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/date_check"
        android:buttonTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/body_check"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/date_check"
        app:layout_constraintBottom_toBottomOf="@id/date_check"
        android:textSize="20dp"
        android:padding="3dp"
        android:text="Date &amp; Time"/>
    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/answers_check"
        android:buttonTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/date_check"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/answers_check"
        app:layout_constraintBottom_toBottomOf="@id/answers_check"
        android:textSize="20dp"
        android:padding="3dp"
        android:text="No of Answers"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/votes_check"
        android:buttonTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/answers_check"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/votes_check"
        app:layout_constraintBottom_toBottomOf="@id/votes_check"
        android:textSize="20dp"
        android:padding="3dp"
        android:text="No of Votes"/>


</androidx.constraintlayout.widget.ConstraintLayout>