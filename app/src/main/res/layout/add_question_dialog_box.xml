    <Spinner
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/read_option_list"
        app:layout_constraintVertical_bias="0.175"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintTop_toBottomOf="@id/title_edit_box"
        android:spinnerMode="dropdown"
        android:entries="@array/drop_down_list"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@+id/read_option_list"
        app:layout_constraintVertical_bias="0.18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/add_button_dialog"
        app:layout_constraintHorizontal_bias="0.2">
        <EditText
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:hint="Describe your problem"
            android:id="@+id/question_body_dialog"
            android:textSize="20sp"
            android:gravity="bottom|left"
            android:inputType="textMultiLine"
            android:ems="10"
            />
    </ScrollView>


