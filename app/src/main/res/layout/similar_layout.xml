<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView android:id="@+id/question_format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        app:cardBackgroundColor="#FFEB3B"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_margin="2dp"
            android:id="@+id/question_elements1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/question_data1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/question_title1"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Question Title"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/question_body1"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Question Body"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/ans_vote_date1"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:text="Answers: 0,  Votes: 0,  Posted on: NIL" />

                <View
                    android:background="@color/blue_text"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"/>
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>